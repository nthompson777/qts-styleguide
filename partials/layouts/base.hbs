<!doctype html>
<html lang="en" class="no-js">
  <head>
    <title>
      {{#if title}}
        {{title}} | 
      {{else}}
        &nbsp; 
      {{/if}}
      QTS Style Guide
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="{{root}}assets/css/styles.min.css">
    <link rel="stylesheet" href="{{root}}assets/css/styles/atom-one-light.css">
    <link rel="apple-touch-icon" sizes="180x180" href="{{root}}apple-touch-icon.png?v=zXbBrdGllj">
    <link rel="icon" type="image/png" sizes="32x32" href="{{root}}favicon-32x32.png?v=zXbBrdGllj">
    <link rel="icon" type="image/png" sizes="16x16" href="{{root}}favicon-16x16.png?v=zXbBrdGllj">
    <link rel="manifest" href="{{root}}site.webmanifest?v=zXbBrdGllj">
    <link rel="mask-icon" href="{{root}}safari-pinned-tab.svg?v=zXbBrdGllj" color="#03629f">
    <link rel="shortcut icon" href="{{root}}favicon.ico?v=zXbBrdGllj">
    <meta name="msapplication-TileColor" content="#2d89ef">
    <meta name="theme-color" content="#03629f">
    <style>
      /* This styles the color blocks used in the color documentation. */
      .color-block {
        border-radius: 2px;
        display: block;
        padding: 8px 8px 6px;
        color: #333;
        border: 1px solid #ddd;
      }
        .color-swatch {
          display: block;
          width: 100%;
          height: 100px;
          margin-bottom: 0.42857rem;
        }
        .sticky .vertical.menu .is-active {
          font-weight: bold;
          background: rgb(236, 238, 239);
        }
      </style>
    {{#> head-block}}
      {{!-- Custom <head> content per page could be added. --}}
    {{/head-block}}
  </head>
  {{#if bodyId}}
    <body id="{{bodyId}}">
  {{else}}
    <body>
  {{/if}}
    {{> includes/header }}
    <div class="off-canvas-wrapper">
      {{#> content}}
        {{!-- Hero & Body content goes here --}}
      {{/content}}

      {{> includes/wrapper-end }}
    </div>
    
      {{#> footer-block}}
        {{!--
          The `includes/footer` partial is the default content,
          but can be overridden.
        --}}
        {{> includes/footer }}
      {{/footer-block}}
    
    <script src="{{root}}assets/js/scripts.min.js"></script>
    <script src="{{root}}assets/js/highlight.pack.js"></script>
    <script>hljs.initHighlightingOnLoad();</script>
    {{#> scripts-block}}
      {{!-- Custom scripts per page can be added. --}}
    {{/scripts-block}}
  </body>
</html>